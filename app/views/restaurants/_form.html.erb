<%= form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div class="alert alert-danger">
      <p><b><%= @restaurant.errors.count %>件のエラーがあります</b></p>

      <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  <%= f.label :name, "名前" %>
  <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :telephone, "電話番号" %>
  <%= f.text_field :telephone, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :area, "エリア" %>
  <%= f.text_field :area, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :address, "住所" %>
  <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :home_page, "ホームページ" %>
  <%= f.text_field :home_page, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :image, "画像" %>
  <%= f.text_field :image, class: "form-control" %>
  </div>

  <%= f.submit '編集する', class: "btn btn-primary" %>

<% end %>
